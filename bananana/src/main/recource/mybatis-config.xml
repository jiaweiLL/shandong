<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration	  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"	  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 添加数据库属性配置文件 -->
    <properties resource="db.properties" />
    <!-- 懒加载设置 -->
    <settings>
        <!-- 打开延迟加载的开关 -->
        <setting name="lazyLoadingEnabled" value="true" />
        <!-- 将积极加载改为消息加载即按需加载 -->
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>
<!--    <typeAliases>-->
<!--        <package name="com.isoft.entity"/>-->
<!--    </typeAliases>-->

      <typeAliases>
          <package name="com.isoft.entity"/>
      </typeAliases>

    <!-- 配置数据库连接 -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">   <!-- UNPOOLED 只在每次请时打开和关闭一个连接；POOLED 缓存JDBC连接对象；JDNI 和Spring时使用 -->
                <property name="driver" value="${mysql.driver}"/>
                <property name="url" value="${mysql.dburl}"/>
                <property name="username" value="${mysql.loginname}"/>
                <property name="password" value="${mysql.loginpass}"/>
            </dataSource>
        </environment>
    </environments>
    <!-- 引入mybatis描述sql语句的xml文件或者java文件所在位置 -->
    <mappers>
<!--        <mapper resource="com/isoft/mapper/NewsMapper.xml"/>-->
<!--        <mapper resource="com/isoft/mapper/NewsMapper.xml"/>-->
        <mapper resource="com/isoft/mapper/PageDao.xml"/>
        <mapper resource="com/isoft/mapper/News.xml"/>
<!--        <mapper resource="com/"-->
<!--        <mapper class="com.isoft.dao.NewsAnnotionDao" />-->
<!--        <mapper resource="com/isoft/mapper/SysMapper.xml"/>-->
<!--        <mapper resource="com/isoft/mapper/SysAllMapper.xml"/>-->
    </mappers>
</configuration>